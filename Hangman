import random
words = ["reliable", "hardworking", "creative", "friendly", "adaptable", "punctual", "responsible", "intelligent"]

def hangman():
    guesses = 0
    gameplay = True
    answer = list(words[random.randint(0, len(words))])
    word_length = len(answer)
    display = []
    guessed = []
    letter = ""
    for i in answer:
        display.append("_ ")
    while guesses < 10:
        letter = input("Guess a letter: ")
        if letter.lower() in guessed:
            print("Already guessed that letter!")
        else:
            for i in range(0, word_length):
                if letter.lower() == answer[i]:
                    display[i] = letter.lower()
            guesses += 1
        guessed.append(letter.lower())
        print("".join(display))
        if display == answer:
            print("You got it!")
            gameplay = False
    else:
        result = ""
        for char in answer:
            result += char
        print("Too bad! The word was '" + str(result) + "'!")


hangman()
